{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <center><h3>Information</h3></center>
            <hr>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="thumbnail">
                            <div class="caption">
                                <article>
                                    <div>
                                        <div>Email:</div>
                                        {{ user.email }}
                                        <hr>
                                        <div>Full Name:</div>
                                        {{ user.fullName }}
                                    </div>
                                </article>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container body-content">
        <div class="row">
            <center><h3>Articles</h3></center>
            <hr>
            {% for article in articles %}
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div class="thumbnail">
                                <div class="caption">
                                    <span class="label label-default">New</span>
                                    <article>
                                        <header>
                                            <h2>{{ article.title }}</h2>
                                            <div class="pull-right">
                                                <a class="btn btn-default btn-xs"
                                                   href="{{ path('article_view',{'id': article.id}) }}">Read more &raquo;</a>
                                            </div>
                                            <div class="pull-right">
                                                <a class="btn btn-success btn-xs"
                                                   href="{{ path('article_edit',{'id': article.id}) }}">Edit &raquo;</a>
                                            </div>
                                            <div class="pull-right">
                                                <a class="btn btn-danger btn-xs"
                                                   href="{{ path('article_delete',{'id': article.id}) }}">Delete &raquo;</a>
                                            </div>
                                        </header>

                                        <p>
                                            {{ article.summary }}

                                        </p>






                                    </article>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
